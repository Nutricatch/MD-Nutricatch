<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NutriCatch.TextStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.NutriCatch.TextStyle.Headline.Medium" parent="Theme.NutriCatch.TextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.NutriCatch.TextStyle.Headline.Medium.Bold" parent="Theme.NutriCatch.TextStyle.Headline.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NutriCatch.TextStyle.Headline.Small" parent="Theme.NutriCatch.TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle" parent="Base.Theme.NutriCatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ButtonStyle.Outlined" parent="ButtonStyle">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="backgroundTint">#fff</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
    </style>

    <style name="roundedCornersView">
        <item name="cornerSize">15%</item>
    </style>

    <style name="circleView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/r_btn_selector</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/rbtn_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

</resources>